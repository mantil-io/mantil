{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::{{.Bucket}}"
        },
        {
            "Effect": "Allow",
            "Action": "s3:*",
            "Resource": "arn:aws:s3:::{{.Bucket}}/*"
        },
        {
            "Effect": "Allow",
            "Action": "ecr:*",
            "Resource": "arn:aws:ecr:*:*:repository/mantil-project-{{.Organization.Name}}-{{.Name}}"
        },
	{
	    "Effect": "Allow",
            "Action": "ecr:GetAuthorizationToken",
            "Resource": "*"
	}
    ]
}
